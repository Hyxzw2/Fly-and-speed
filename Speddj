-- LocalScript em StarterPlayerScripts
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

-- Interface simples (azul)
local screenGui = Instance.new("ScreenGui", player.PlayerGui)
local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 200, 0, 100)
frame.Position = UDim2.new(0.5, -100, 0.1, 0)
frame.BackgroundColor3 = Color3.fromRGB(0, 102, 204)
frame.Name = "hy"

local button = Instance.new("TextButton", frame)
button.Size = UDim2.new(1, 0, 1, 0)
button.Text = "Ativar Speed"
button.BackgroundColor3 = Color3.fromRGB(0, 153, 255)
button.TextColor3 = Color3.fromRGB(255, 255, 255)

-- Velocidade base
local speedOn = false

button.MouseButton1Click:Connect(function()
    speedOn = not speedOn
    if speedOn then
        humanoid.WalkSpeed = 50 -- Aumenta a velocidade
        button.Text = "Speed Ativado"
    else
        humanoid.WalkSpeed = 16 -- Velocidade padr√£o do Roblox
        button.Text = "Ativar Speed"
    end
end)
