

-- GUI Setup
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local SpeedSlider = Instance.new("TextBox")
local JumpSlider = Instance.new("TextBox")
local SpeedLabel = Instance.new("TextLabel")
local JumpLabel = Instance.new("TextLabel")
local ToggleAntiRagdoll = Instance.new("TextButton")

ScreenGui.Name = "SpeedJumpUI"
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(0, 85, 255)
Frame.Position = UDim2.new(0.1, 0, 0.1, 0)
Frame.Size = UDim2.new(0, 250, 0, 180)
Frame.Active = true
Frame.Draggable = true

SpeedLabel.Parent = Frame
SpeedLabel.Text = "Velocidade"
SpeedLabel.Position = UDim2.new(0.1, 0, 0.1, 0)
SpeedLabel.Size = UDim2.new(0, 200, 0, 25)
SpeedLabel.BackgroundTransparency = 1
SpeedLabel.TextColor3 = Color3.new(1,1,1)
SpeedLabel.TextScaled = true

SpeedSlider.Parent = Frame
SpeedSlider.Text = "16"
SpeedSlider.Position = UDim2.new(0.1, 0, 0.25, 0)
SpeedSlider.Size = UDim2.new(0, 200, 0, 30)
SpeedSlider.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
SpeedSlider.TextColor3 = Color3.new(1,1,1)
SpeedSlider.ClearTextOnFocus = false

JumpLabel.Parent = Frame
JumpLabel.Text = "Altura do Pulo"
JumpLabel.Position = UDim2.new(0.1, 0, 0.5, 0)
JumpLabel.Size = UDim2.new(0, 200, 0, 25)
JumpLabel.BackgroundTransparency = 1
JumpLabel.TextColor3 = Color3.new(1,1,1)
JumpLabel.TextScaled = true

JumpSlider.Parent = Frame
JumpSlider.Text = "50"
JumpSlider.Position = UDim2.new(0.1, 0, 0.65, 0)
JumpSlider.Size = UDim2.new(0, 200, 0, 30)
JumpSlider.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
JumpSlider.TextColor3 = Color3.new(1,1,1)
JumpSlider.ClearTextOnFocus = false

ToggleAntiRagdoll.Parent = Frame
ToggleAntiRagdoll.Text = "Ativar Anti-Ragdoll"
ToggleAntiRagdoll.Position = UDim2.new(0.1, 0, 0.85, 0)
ToggleAntiRagdoll.Size = UDim2.new(0, 200, 0, 30)
ToggleAntiRagdoll.BackgroundColor3 = Color3.fromRGB(0, 150, 255)
ToggleAntiRagdoll.TextColor3 = Color3.new(1,1,1)

-- Funções
local player = game.Players.LocalPlayer
local humanoid = player.Character:WaitForChild("Humanoid")

SpeedSlider.FocusLost:Connect(function()
    local value = tonumber(SpeedSlider.Text)
    if value and value > 0 then
        humanoid.WalkSpeed = value
    end
end)

JumpSlider.FocusLost:Connect(function()
    local value = tonumber(JumpSlider.Text)
    if value and value > 0 then
        humanoid.JumpPower = value
    end
end)

local antiRagdollEnabled = false

ToggleAntiRagdoll.MouseButton1Click:Connect(function()
    antiRagdollEnabled = not antiRagdollEnabled
    if antiRagdollEnabled then
        ToggleAntiRagdoll.Text = "Anti-Ragdoll Ativado"
        -- Simples proteção contra ragdoll (depende do jogo)
        player.Character.DescendantAdded:Connect(function(child)
            if child:IsA("BodyVelocity") or child:IsA("BodyGyro") then
                child:Destroy()
            end
        end)
    else
        ToggleAntiRagdoll.Text = "Ativar Anti-Ragdoll"
    end
end)

-- Aplicar valores padrões
humanoid.WalkSpeed = tonumber(SpeedSlider.Text)
humanoid.JumpPower = tonumber(JumpSlider.Text)
